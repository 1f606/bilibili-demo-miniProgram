@import '../../assets/font/iconfont.wxss';

.index {
  width: 100%;
  height: 100%;
}
.scrollCon {
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.scrollCon {
  height: 100%;
  width: 100%;
  white-space: nowrap;
}
.scroll-item {
  display: inline-block;
  width: 150rpx;
  height: 100%;
  padding: 20rpx 45rpx;
  font-size: 20rpx;
}
.active {
  border-bottom: 5rpx solid #de688b;
}

swiper {
  height: 220rpx;
}

swiper navigator {
  width: 100%;
  height: 100%;
}

swiper image {
  height: 100%;
  width: 100%;
}

.videoCon {
  display: flex;
  flex-wrap: wrap;
}
.videoCon navigator {
  width: 50%;
  height: 400rpx;
  display: flex;
  flex-direction: column;
}
.imgCon {
  height: 300rpx;
  position: relative;
}
.video_desc {
  position: absolute;
  bottom: 0;
  left:0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: pink;
}
.video_title {
  flex: 1;
  font-size: 30rpx;
  line-clamp: 2;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.video image {
  height: 100%;
  width: 100%;
}